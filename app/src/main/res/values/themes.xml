<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Belajar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/hijau02</item>
        <item name="colorPrimaryVariant">@color/hijau01</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:fontFamily">@font/nunito</item>
        <item name="android:editTextBackground">@drawable/rounded_border_edittext</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="edittextStyle">
        <item name="android:padding">10dp</item>
    </style>

    <style name="TanpaActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:fontFamily">@font/nunito</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>
</resources>