            android:name=".ui.admin.KategoriActivity"
            android:exported="false"
            android:label="Master Kategori" />
        <activity
            android:name=".ui.admin.UserActivity"
            android:exported="false"
            android:label="Master User" />
        <activity
            android:name=".ui.admin.AdminActivity"
            android:exported="false"
